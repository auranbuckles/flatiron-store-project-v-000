<h1>Welcome to the Store!</h1>

<h2>Browse by category:</h2>
<ul>
	<% @categories.each do |category| %>
	<li>
	  <%= link_to category.title, category_path(category) %> <br>
	</li>
	<% end %>
</ul>

<h2>Items:</h2>
<% @items.each do |item| %>
  <p><%= item.title %> | <%= number_to_currency(item.price/100) %> | <%= button_to 'Add to Cart', line_items_path(item_id: item) if user_signed_in? %></p>
<% end %>